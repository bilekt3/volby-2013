@import colors
@import prefixes
body
    margin 0px
    font-family arial, sans-serif
    overflow hidden
    svg
        position absolute
        top 0px
        left 0px
        background #ddd
        .land
            fill white
        .boundary
            fill none
            stroke #333
            stroke-width 0.5px
        .country
            stroke none
            &:hover
                opacity 0.7

        .squares
            rect
                fill #aaa
                &.inactive
                    opacity 0.1
                &.kraj-1
                    fill #f66
                &.kraj-2
                    fill #6f6
